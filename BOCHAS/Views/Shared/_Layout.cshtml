                                <ul class="nav">
                                    <li><a asp-action="RegistrarEmpleado" asp-controller="Personas"> <i class="fas fa-user-plus"></i>Nuevo Empleado</a></li>
                                    <li><a asp-controller="Personas" asp-action="ConsultarEmpleado"> <i class="fas fa-user-edit"></i>Consultar activos</a></li>
