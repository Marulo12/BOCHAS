@model BOCHAS.Models.Cobro
@{
    BOCHASContext bd = new BOCHASContext();
    Layout = "~/Views/Shared/_Layout.cshtml";
    var reservas = (from a in bd.AlquilerCancha join p in bd.Persona on a.IdCliente equals p.IdUsuario where a.IdEstado == 4 && a.IdCobro == null select new { NroReserva = a.Numero, jugador = "Reserva:" + a.Numero + ", Jugador: " + p.Nombre + " " + p.Apellido }).ToList();
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<style>
    .custom-combobox {
        position: relative;
        display: inline-block;
        width: 90%;
    }

    .custom-combobox-toggle {
        position: absolute;
        top: 0;
        bottom: 0;
        margin-left: -1px;
        padding: 0;
    }

    .custom-combobox-input {
        margin: 0;
        padding: 6px 10px;
        background-color: darkred;
        color: white;
        width: 100%;
        background-color: rgba(172, 44, 44, 0.9);
    }
</style>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 style="padding:0px;margin:0px;"><i class="fas fa-money-bill"></i> Cobros</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <ul class="nav nav-tabs ">
                <li role="presentation" class="active"><a asp-action="NuevaReserva" asp-controller="AlquilerCanchas">Cobro de Alquiler de cancha</a></li>
                <li role="presentation"><a id="ConsultaReserva" asp-action="ConsultarReservas" asp-controller="AlquilerCanchas">Cobro de Clases particulares</a></li>                
            </ul>
        </div>
        <br />
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Responsable de Cobro</label>
                    <input class="form-control" value="@ViewData["empleado"].ToString()" readonly />
                </div>
                <div class="form-group">
                    <label class="control-label">Medio de Pago</label>
                    <select id="MedioPago" class="form-control" asp-items="ViewBag.IdMedioPago"></select>
                </div>

            </div>
            <div class="col-md-5" style="padding-top:20px;">
                <div class="form-group">
                    <label asp-for="Fecha" class="control-label"></label>
                    <input id="FechaCobro" type="date" class="btn btn-sm " value="@DateTime.Now.Date.ToString("yyyy-MM-dd")" readonly />

                </div>
                <div id="DivTarjeta" class="form-group" style="display:none;">
                    <div class="col-sm-6">
                        <label>N° Cupon:</label>
                        <input id="Ncupon" class="form-control" />
                    </div>
                    <div class="col-sm-6">
                        <label>Tipo de Tarjeta</label>
                        <select id="IdTarjeta" class="form-control" asp-items="ViewBag.IdTarjeta"></select>
                    </div>


                </div>
            </div>
        </div>
            <div class="row">
                <div class="col-md-12">
                    <h4>Servicio</h4>
                    <div class="row">
                        <div class="col-sm-6">
                            <label>Reservas</label>
                            @{ if (reservas != null)
                                {
                                    <div class="btn-group-sm">
                                        <select id="Reservas" class="btn btn-sm" asp-items="@{new SelectList(reservas, "NroReserva", "jugador")}"></select><button class="btn btn-sm btn-success" style="margin-left:20px;"><i class="fa fa-plus"></i></button>
                                    </div>

                                }
                                else
                                {
                                    <select class="form-control"><option>No hay reservas pendientes de cobro</option></select>
                                }
                            }

                        </div>

                        <div class="col-sm-6"></div>
                    </div>
                    <hr />
                    <table id="Tservicios" class="table">
                        <thead class="alert alert-info"><tr><td style="width:20%">Servicio</td><td style="width:5%">$Precio Unit.</td><td style="width:5%">Cant.Canchas</td><td style="width:5%">Cant.Horas</td><td style="width:10%">$Total</td></tr></thead>
                        <tbody></tbody>
                    </table>

                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h4>Servicios adicionales  <button class="btn btn-xs btn-default" data-toggle="collapse" data-target="#TserviciosA"><i class="fa fa-list"></i></button></h4>
                    <table id="TserviciosA" class="table  collapse" style="width:100%;">
                        <thead class="alert alert-info"><tr><td>Servicio</td><td>$Precio Unit.</td><td style="width:5%">Cantidad</td><td style="width:10%">$Total</td><td>Agregar</td><td style="display:none;"></td></tr></thead>
                        <tbody></tbody>
                    </table>
                    <hr />
                    <div class="row">
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-btn">
                                    <button class="btn  btn-info" type="button" onclick="CalcularTotal()">=</button>
                                </span>
                                <input id="InputTotalR" type="text" class="form-control" placeholder="El total es" readonly>
                            </div>
                        </div>
                        <div class="col-md-3"> <input id="RegCobro" type="button" value="Generar Cobro" class="btn btn-primary" onclick="RegistrarCobroReserva()" /></div>
                    </div>
                </div>
            </div>
      
    </div>
</div>
@section Scripts{
    <script src="~/js/Cobros.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/js/AutoCompletarCombos-UI.js"></script>
}


