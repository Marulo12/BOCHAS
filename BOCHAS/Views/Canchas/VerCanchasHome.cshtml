@model IEnumerable<BOCHAS.Models.Cancha>

@{
    ViewData["Title"] = "Index";
}

<div class="panel">
    <div class="panel-heading">
        <h3 style="padding:0px;margin:0px;"><i class="fab fa-codepen"></i>Canchas</h3>
        <div class="right">
            <button type="button" class="btn-toggle-collapse"><i class="lnr lnr-chevron-up"></i></button>
            <button type="button" class="btn-remove"><i class="lnr lnr-cross"></i></button>
        </div>
    </div>
    <div class="panel-body no-padding pre-scrollable">               
        <table id="TablaCanchas" style="width:100%;" class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th style="width:5%;">
                      Número
                    </th >
                    <th style="width:10%;">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th style="width:10%;">
                        Descripción
                    </th>
                    <th style="width:5%;">
                        Estado
                    </th>
                    <th style="width:5%;">
                        Tipo de Cancha
                    </th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Numero)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                            @{ if (item.IdEstadoCanchaNavigation.Id == 2)
                                {
                                    <i class="far  fa-thumbs-up" style="color:forestgreen;"></i>
                                }
                                if (item.IdEstadoCanchaNavigation.Id == 1)
                                {

                                    <i class="fas  fa-table-tennis" style="color:orangered;"></i>
                                }
                                if (item.IdEstadoCanchaNavigation.Id == 1002)
                                {
                                    <i class="fas  fa-screwdriver"></i>

                                }
                            }
                            @Html.DisplayFor(modelItem => item.IdEstadoCanchaNavigation.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdTipoMaterialNavigation.Nombre)
                        </td>
                       
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>



