@model BOCHAS.Models.Cancha

@{
    ViewData["Title"] = "Create";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h2><i class="fab fa-codepen"></i>  Administración de canchas</h2>


    </div>
    <div class="panel-body">
        <div class="row">
            <ul class="nav nav-tabs ">
                <li role="presentation" class="active"> <a asp-action="NuevaCancha">Alta</a></li>
                <li role="presentation"><a asp-action="Index">Consulta</a></li>

            </ul>
            <br />

        </div>
        <div class="row">
            <form id="NuevaCancha" asp-action="Create">
                <div class="col-md-4">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">Número</label>
                        <input id="Numero" asp-for="Numero" class="form-control" />
                       
                    </div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input id="Nombre" asp-for="Nombre" class="form-control" />

                    </div>



                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Descripción</label>
                        <input asp-for="Descripcion" class="form-control" />
                      
                    </div>
                    <div class="form-group">
                        <label class="control-label">Tipo de Material</label>
                        <select asp-for="IdTipoMaterial" class="form-control" asp-items="ViewBag.IdTipoMaterial" style="background-color: rgba(172, 44, 44, 0.9);color:white;"></select>

                    </div>

                </div>
                <div class="col-md-1">
                    <div class="form-group" style="display:none;">
                        <label class="control-label">Estado</label>
                        <select asp-for="IdEstadoCncha" class="form-control" asp-items="ViewBag.IdEstadoCncha" style="background-color: rgba(172, 44, 44, 0.9);color:white;"></select>

                    </div>
                    <input type="submit" value="Aceptar" class="btn btn-primary" style="margin-top:100px;" />
                </div>
            </form>
        </div>


    </div>
</div>


@section Scripts {
    <script src="~/js/Canchas.js"></script>

}

