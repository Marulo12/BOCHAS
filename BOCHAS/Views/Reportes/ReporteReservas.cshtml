@model IEnumerable<BOCHAS.Models.AlquilerCancha>
    @{
        Layout = null;
    }
    <link href="~/wwwroot/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <h1>BOCHAS PADEL</h1>
    <h3>Reporte de Reservas</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Numero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaPedido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaReserva)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaCancelacion)
                </th>

                <th>
                    Jugador
                </th>
                <th>
                    Numero de Recibo
                </th>
                <th>
                    Estado
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Numero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaPedido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaReserva)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaCancelacion)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.IdClienteNavigation.Contraseña)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCobroNavigation.Numero)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.IdEstadoNavigation.Nombre)
                </td>

            </tr>
            }
        </tbody>
    </table>
    <script src="~/wwwroot/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/wwwroot/lib/bootstrap/dist/js/bootstrap.min.js"></script>
