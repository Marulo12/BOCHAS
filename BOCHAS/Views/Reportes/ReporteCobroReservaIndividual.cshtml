@model BOCHAS.Models.RepoCobroReservasIndividual
@{
    Layout = null;
    BOCHASContext db = new BOCHASContext();
    decimal total = 0;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reporte Cobro de alquiler</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>

    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12" style="align-content:center;padding-left:0%;">
                <img class="img-responsive" src="~/images/LogoBochas.png" width="50" style="float:left;position:absolute;z-index:10000" />
                <label style="float:right;">Fecha: @DateTime.Now.Date.ToString("dd/MM/yyyy")</label>
                <br />
                <h1 style="font-size:50px;padding-left:34%;font-family:'Times New Roman', Times, serif">Bochas Padel</h1>
                <hr />
                <h2 style="padding-left:12%;"><img src="~/images/extras/padel3.png" width="160" />Cobro de Alquiler de Cancha</h2>
            </div>
        </div>
        <hr style="height:4px;" />
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3>Información General</h3>
            </div>
            <div class="panel-body">
                <p style="font-size:22px;padding-left:30px;">N° Recibo: @Html.DisplayFor(model => model.Reservas.Numero) &nbsp;&nbsp;&nbsp;  Jugador: @db.Persona.Where(p => p.IdUsuario == db.AlquilerCancha.Where(a => a.IdCobro == Model.Reservas.Numero).First().IdCliente).First().Nombre  @db.Persona.Where(p => p.IdUsuario == db.AlquilerCancha.Where(a => a.IdCobro == Model.Reservas.Numero).First().IdCliente).First().Apellido &nbsp;&nbsp;&nbsp; N° Documento: @db.Persona.Where(p => p.IdUsuario == db.AlquilerCancha.Where(a => a.IdCobro == Model.Reservas.Numero).First().IdCliente).First().NroDocumento</p>
                <p style="font-size:20px;padding-left:30px;"> Fecha de Cobro:     @Model.Reservas.Fecha.Date.ToString("dd/MM/yyyy")  &nbsp;&nbsp;&nbsp; </p>
                <p style="font-size:20px;padding-left:30px;">Medio de Pago:  @Html.DisplayFor(model => model.Reservas.IdMedioPagoNavigation.Nombre) </p>
                @{ if (Model.Reservas.IdMedioPago == 2)
                    {
                        <p style="font-size:20px;padding-left:30px;">N° Cupón: @Model.Reservas.NroCupon.ToString()  Empresa: @db.Tarjeta.Where(t => t.Id == Model.Reservas.IdTarjeta).SingleOrDefault().Nombre   Tipo:@db.Tarjeta.Where(t => t.Id == Model.Reservas.IdTarjeta).SingleOrDefault().TipoTarjeta </p>
                    } }

            </div>
            <div class="panel-footer" style="background-color:rgba(170, 44, 44, 0.9);color:white;padding-left:0px;padding-right:0px;">
                <h3 style="padding-left:10px;">Detalle de Cobro</h3>

                <table class="table" style="font-size:20px;background-color:white;color:black;">
                    <thead><tr><td>N°</td><td>Servicio</td><td>Precio Unitario</td><td>Cantidad</td><td>Horas</td><td>Monto</td><td></td></tr></thead>
                    <tbody>
                        @{
                            foreach (var item in Model.Reservas.DetalleCobro.Where(d => d.IdNumeroServicioAlquiler == Model.Nreserva))
                            {
                                if (item.IdServicio != null)
                                {
                                    <tr><td>@item.IdNumeroServicioAlquiler</td><td>@db.Servicio.Where(s => s.Id == item.IdServicio).Single().Nombre</td><td>@Convert.ToDecimal(db.Servicio.Where(s => s.Id == item.IdServicio).Single().Precio).ToString("C")</td><td>@item.Cantidad</td><td>@item.TotalHoras.Value.ToString("N")</td><td>@Convert.ToDecimal(item.Monto).ToString("C")</td></tr>
                                    total = total + @Convert.ToDecimal(item.Monto);
                                }
                                else
                                {
                                    if (item.IdServiciosAdicionales != null)
                                    {
                                        <tr><td></td><td>@db.ServiciosAdicionales.Where(s => s.Id == item.IdServiciosAdicionales).Single().Nombre</td><td>@Convert.ToDecimal(db.ServiciosAdicionales.Where(s => s.Id == item.IdServiciosAdicionales).Single().Precio).ToString("C")</td><td>@item.Cantidad</td><td>-</td><td>@Convert.ToDecimal(item.Monto).ToString("C")</td></tr>
                                        total = total + @Convert.ToDecimal(item.Monto);
                                    }

                                }

                            }

                        }
                    </tbody>
                </table>
                <br />
                <h2 style="text-align:right;padding-right:20px;">Total: @total.ToString("C")</h2>
            </div>
        </div>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</body>
</html>
