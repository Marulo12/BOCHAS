@model IEnumerable<BOCHAS.Models.Cobro>
@{
    Layout = null;
    BOCHASContext bd = new BOCHASContext();
    decimal? total = 0;
}
<!DOCTYPE html>

<html style="padding:0px;margin:0px;">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reporte Ingresos</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="padding:0px;margin:0px;">

    <img class="img-responsive" src="~/images/LogoBochas.png" width="50" style="float:left;position:absolute;z-index:10000" />
    <label style="float:right;">Fecha: @DateTime.Now.Date.ToString("dd/MM/yyyy")</label>
    <br />
    <h1 style="font-size:50px;padding-left:38%;font-family:'Times New Roman', Times, serif">Bochas Padel</h1>
    <hr />
    <h2 style="padding-left:22%;"><img src="~/images/extras/padel3.png" width="160" />&nbsp;&nbsp;&nbsp;Listado de Ingresos Diarios</h2>
    <div class="container-fluid">
        <h5>Desde el @TempData["fecD"] Hasta @TempData["fecH"]</h5>
        <table class="table">
            <thead style="background-color: rgba(0, 104, 253, 0.8);color:white;">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Fecha)
                    </th>
                    <th>
                        Total
                    </th>

                    <th>
                        Medio de pago
                    </th>
                    <th>
                        Tarjeta
                    </th>
                    <th>
                        Cupon
                    </th>
                    <th>
                        Responsable
                    </th>
                    <th>Detalle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @item.Fecha.Date.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MontoTotal)
                        @{
                            total = total + item.MontoTotal;

                                }
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.IdMedioPagoNavigation.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdTarjetaNavigation.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NroCupon)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdUsuarioNavigation.Persona.SingleOrDefault().Nombre) @Html.DisplayFor(modelItem => item.IdUsuarioNavigation.Persona.SingleOrDefault().Apellido)
                    </td>
                    <td>
                        <ul class="list-group" style="margin:0px;">
                            @{foreach (var dt in item.DetalleCobro)
                                {

                                    if (dt.IdServicio != null)
                                    {
                            <li class="list-group-item">
                                -> @Html.DisplayFor(modelItem => bd.Servicio.Where(s => s.Id == dt.IdServicio).SingleOrDefault().Nombre), Cantidad:@Html.DisplayFor(modelItem => dt.Cantidad), Horas: @Html.DisplayFor(modelItem => dt.TotalHoras), $Monto: @Html.DisplayFor(modelItem => dt.Monto)
                            </li>
                                    }
                                    else
                                    {
                                        <li class="list-group-item">
                                          ->  @Html.DisplayFor(modelItem => bd.ServiciosAdicionales.Where(s => s.Id == dt.IdServiciosAdicionales).SingleOrDefault().Nombre),  Cantidad:@Html.DisplayFor(modelItem => dt.Cantidad), $Monto:@Html.DisplayFor(modelItem => dt.Monto)
                                        </li>
                                    }

                                }

                            }
                        </ul>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        <h3 style="text-align:right;padding-right:120px;background-color: rgba(215, 44, 44, 0.7);color:white;">Total : $@total</h3>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>

</html>