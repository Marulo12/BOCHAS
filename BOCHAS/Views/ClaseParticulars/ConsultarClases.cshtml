@model BOCHAS.Models.ClaseParticular
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<style>
    .custom-combobox {
        position: relative;
        display: block;
    }

    .custom-combobox-toggle {
        position: absolute;
        top: 0;
        bottom: 0;
        margin-left: -1px;
        padding: 0;
    }

    .custom-combobox-input {
        margin: 0;
        padding: 5px 10px;
        background-color: darkred;
        color: white;
        width: 100%;
        background-color: rgba(172, 44, 44, 0.9);
    }
</style>
<div class="panel panel-primary">
    <div class="panel-heading" style="padding-bottom:0px;">
        <h3 style="padding:0px;margin:0px;margin-bottom:4px;"><i class="fas fa-users"></i> Clases Particulares</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <ul class="nav nav-tabs ">
                <li role="presentation"> <a asp-action="Index" asp-controller="ClaseParticulars">Nueva Clase</a></li>
                <li role="presentation" class="active"><a id="ConsultarClase" asp-action="ConsultarClases" asp-controller="ClaseParticulars">Consulta de Clases</a></li>
            </ul>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-4">
                <label class="control-label">Alumno</label>
                <select id="IdCliente" asp-for="IdJugador" class="form-control" asp-items="ViewBag.IdJugador"></select>
            </div>
            <div class="col-sm-5">
                <div class="col-sm-5"><label>Fecha desde:</label><input type="date" class="form-control" id="fechaD" style="font-size:12px;" /></div>
                <div class="col-sm-5"><label>Fecha hasta:</label><input type="date" class="form-control" id="fechaH" style="font-size:12px;" /></div>
                <div class="col-sm-1" style="padding:0px;padding-top:22px;"> <button id="BtnConPart" type="button" class="btn btn-sm btn-info "><i class="fa fa-search"></i></button></div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-12">
                <img id="ImgLoad" src="~/images/extras/dots-2.gif" width="200" style="display:none;" />
                <div id="TablaCobros">

                </div>
            </div>
        </div>
    </div>
    @{ if (TempData["Respuesta"] != null)
        {

            <input id="Respuesta" value="@TempData["Respuesta"]" style="display:none" />
            <input id="NReservaFinalizada" value="@TempData["NReservaFinalizada"]" style="display:none" />
        }
    }
</div>


<div id="ModalMail" class="modal fade mail" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h3><i class="fas fa-envelope"></i> Mail de Cancelación</h3>
            </div>
            <div class="modal-body">
                <p>Enviando mail de cancelación de clase particular</p>
                <div class="progress">
                    <div class="progress-bar progress-bar-striped active" role="progressbar"
                         aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width:100%">
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


@section Scripts{

    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/js/AutoCompletarCombos-UI.js"></script>
    <script src="~/js/ClasesParticulares.js"></script>
    <script>
    $('[data-toggle="tooltip"]').tooltip(); $(".BtnCancelaR").click(function (event) {
            $("#ModalMail").modal();
        });</script>

}

