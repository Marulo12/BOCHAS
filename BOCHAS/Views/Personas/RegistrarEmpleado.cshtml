
<div id="containerEmpleadoAlta" ng-app="" class="container" style="margin-top:20px;">
    <div class="panel panel-primary">
        <div class="panel-heading" style="padding-bottom:0px;">
            <img class="img-responsive" width="40" src="~/images/usuarioSinfond.png" />    <h3>Empleados</h3>
          
        </div>
        <div class="panel-body">
            <div id="DivCarga" style="display:none;">
                <div class="row">
                   
                    <div class="col-sm-12 ok" style="padding-left:40%;">
                        <img src="~/images/carga.gif" alt="" width="200" />
                    </div>
                </div>
            </div>

            <form id="PanelEmpleados" class="form-group"  >

                <div class="row">
                    <ul class="nav nav-tabs ">
                        <li role="presentation"><a href="#">Home</a></li>
                        <li role="presentation" class="active"> <a id="altaEmpleado" asp-action="RegistrarEmpleado" asp-controller="Personas">Alta</a></li>
                        <li role="presentation"><a asp-action="Index"  asp-controller="Personas">Consulta</a></li>
                    </ul>
                    <br />
                    <div class="col-sm-3"><label>Nombre:</label><input id="Nombre" ng-model="Nombre" type="text" class="form-control" required /></div>
                    <div class="col-sm-3"><label>Apellido:</label><input id="Apellido" ng-model="Apellido" type="text" class="form-control" required /></div>
                    <div class="col-sm-2">
                        <label for="TipoDoc">Tipo Documento:</label>  <select id="TipoDoc" class="btn btn-danger form-control"></select>
                    </div>
                    <div class="col-sm-3" style="float:left;"><label>Numero:</label><input id="Numero" type="text" class="form-control" required /></div>
                </div>
                <div class="row" style="margin-top:10px;">
                    <div class="col-sm-4"><label>Mail:</label><input id="Mail" type="email" class="form-control" required /></div>
                    <div class="col-sm-4"><label>Telefono:</label><input id="Telefono" type="tel" class="form-control" required /></div>
                    <div class="col-sm-4">
                        <label for="Cargo">Cargo:</label> <select id="Cargo" class="btn btn-danger form-control"></select>
                    </div>
                </div>
                <hr />

                <div class="row">
                    <div class="col-sm-2">
                        <label for="Localidad">Localidad:</label>&nbsp;<select id="Localidad" class="btn btn-danger form-control"></select>
                    </div>
                    <div class="col-sm-2">
                        <label for="Barrio">Barrio:</label>&nbsp; <select id="Barrio" class="btn btn-danger form-control"></select>

                    </div>
                    <div class="col-sm-2">
                        <label for="Calle">Calle:</label>&nbsp; <input id="Calle" type="text" class="form-control" required />

                    </div>
                    <div class="col-sm-6 " style="border-left:1px solid red">
                        <h4><i class="glyphicon glyphicon-user"></i> &nbsp; Usuario para el sistema</h4>
                        <div class="row">

                            <div class="col-sm-6"><input type="text" id="Usuario" value="{{Nombre.charAt(0) + Apellido}}" placeholder="Usuario" class="form-control" required /></div>

                            <div class="col-sm-6"><input id="Contra" type="password" placeholder="Contraseña" class="form-control" required /></div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3 btn-group" style="margin-top:3%;">
                        <span id="Error" class="label label-warning form-control" style="font-size:20px;"></span>
                    </div>
                    <div class="col-sm-2 btn-group" style="margin-top:3%;float:right">
                        <input id="Registrar" type="button" class="btn  btn-primary" value="Registrar" />
                        <input id="Limpiar" type="button" class="btn  btn-primary" value="Limpiar" />

                    </div>
                </div>

            </form>

        </div>
    </div>

</div>

@section Scripts {

    <script src="~/js/Personas.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>
}

