@model BOCHAS.Models.Persona

@{
    ViewData["Title"] = "Editar Empleado";
}


<hr />
<div class="row">
    <div class="col-sm-12">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="FechaBaja" />
            <input type="hidden" asp-for="Tipo" />
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" required/>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NroDocumento" class="control-label"></label>
                    <input asp-for="NroDocumento" class="form-control" required />
                    <span asp-validation-for="NroDocumento" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="Apellido" class="control-label"></label>
                    <input asp-for="Apellido" class="form-control" required/>
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Tipo Documento</label>
                    @{
                        BOCHASContext bd = new BOCHASContext();
                    }
                    <select asp-for="IdTipoDocumento" class="form-control btn btn-danger" asp-items="@(new SelectList(bd.TipoDocumento.ToList(),"Id","Nombre"))"></select>
                    <span asp-validation-for="IdTipoDocumento" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label">Localidad</label>
                    <select id="Localidad" asp-for="IdDomicilioNavigation.IdLocalidad" class="form-control btn btn-danger" onchange="MostrarBarrio();" asp-items="@(new SelectList(bd.Localidad.ToList(),"Id","Nombre"))"></select>
                    <span asp-validation-for="IdDomicilio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Barrio</label>
                    <select id="Barrio" asp-for="IdDomicilioNavigation.IdBarrio" class="form-control btn btn-danger" asp-items="@(new SelectList(bd.Barrio.ToList(),"Id","Nombre"))"></select>
                    <span asp-validation-for="IdDomicilio" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="IdDomicilioNavigation.Calle" class="control-label"></label>
                    <input asp-for="IdDomicilioNavigation.Calle" class="form-control" required />
                    <span asp-validation-for="IdDomicilioNavigation.Calle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdDomicilioNavigation.Numero" class="control-label"></label>
                    <input asp-for="IdDomicilioNavigation.Numero" class="form-control" required />
                    <span asp-validation-for="IdDomicilioNavigation.Numero" class="text-danger"></span>
                </div>

                
            </div>
            <div class="col-sm-12" style="padding:0px;">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="IdDomicilioNavigation.departamento" class="control-label"></label>
                        <input asp-for="IdDomicilioNavigation.departamento" class="form-control" required />
                        <span asp-validation-for="IdDomicilioNavigation.departamento" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="IdDomicilioNavigation.piso" class="control-label"></label>
                        <input asp-for="IdDomicilioNavigation.piso" class="form-control" />
                        <span asp-validation-for="IdDomicilioNavigation.piso" class="text-danger"></span>
                    </div>
                    </div>
                </div>
                <div class="col-sm-12" style="padding:0px;">

                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="Mail" class="control-label"></label>
                            <input asp-for="Mail" class="form-control" required />
                            <span asp-validation-for="Mail" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="Telefono" class="control-label"></label>
                            <input asp-for="Telefono" class="form-control" required />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>
                    </div>

                </div>

                <div class="col-sm-12" style=" padding:0px;">
                    <div class="form-group">
                        <div class="modal-footer">
                            <input type="submit" value="Modificar" class="btn btn-info" />

                            <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                        </div>
                    </div>
                </div>
</form>
    </div>
</div>


@section Scripts {
    <script src="~/js/Personas.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
