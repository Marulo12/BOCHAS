

<div id="containerEmpleadoAlta" ng-app="" class="container" style="margin-top:20px;">
    <div class="panel panel-primary">
        <div class="panel-heading" style="padding-bottom:0px;">
            <img class="img-responsive" width="40" src="~/images/usuarioSinfond.png" />  <h3>Empleados</h3>

        </div>
        <div class="panel-body">

            <div class="row">
                <ul class="nav nav-tabs ">
                    <li role="presentation"> <a asp-action="RegistrarEmpleado" asp-controller="Personas">Alta</a></li>
                    <li role="presentation" class="active"><a id="ConsultaEmpleado" asp-action="Index" asp-controller="Personas">Consulta</a></li>
                </ul>
                <br />
                <div class="col-sm-3">
                    <form class=" form-inline input-group">
                        <input id="FiltroEmp" type="text" class="form-control" placeholder="Filtro(Nombre o Apellido)" /> <span class="input-group-btn"> <button id="BtnBuscarEmp" class="btn btn-sm btn-info form-control"><span class="glyphicon glyphicon-search"></span> </button> </span>
                     </form>
                </div>
               
                </div>
            <br />
                <div id="CEmpleados" class="col-sm-12">


                </div>

            </div>
        </div>

    </div>
</div>
<div id="ModalDomicilio" class="modal fade " role="dialog">
    <div class="modal-dialog ">

        <!-- Modal content-->
        <div class="modal-content ">
            <div class="modal-header" style="background:-webkit-gradient(linear, 96% 73%, 0% 0%, from(#AD9085), to(#CE2029));">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title" style="color:white"><i class="far fa-address-card"></i> Informacion Adicional</h3>
            </div>
            <div id="ModalBodyDomicilio" class="modal-body">
                <form class="form-group ">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="row ">
                                <div class="col-sm-6"><label>Calle:</label><input id="ModalCalle" type="text" class="form-control" /></div>
                                <div class="col-sm-6"><label>Numero:</label><input id="ModalNumero" type="text" class="form-control" /></div>
                            </div>
                            <div class="row ">
                                <div class="col-sm-6"><label>Localidad:</label><input id="ModalLocalidad" type="text" class="form-control" /></div>
                                <div class="col-sm-6"><label>Barrio:</label><input id="ModalBarrio" type="text" class="form-control" /></div>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-lg-12">
                        
                            <div class="row">
                                <div class="col-sm-6"><label>Usuario:</label><input id="ModalUsuario" type="text" class="form-control" /></div>
                                <div class="col-sm-6"><label>Contraseña:</label><input id="ModalContra" type="password" class="form-control" /></div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>
    <script src="~/js/Personas.js"></script>


}

