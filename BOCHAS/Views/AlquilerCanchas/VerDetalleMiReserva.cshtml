@model IEnumerable<BOCHAS.Models.DetalleAlquilerCancha>

<table id="TablaDetalleReserva" class="table table-striped" style="width:100%;">
    <thead style="background-color: rgba(0, 61, 110, 0.7);color:white;">
        <tr>
            <th>Reserva</th>
            <th>
                Cancha
            </th>
            <th>
                Nombre
            </th>
            <th>
                Descripcion
            </th>
            <th>
                Hora Desde
            </th>
            <th>
                Hora Hasta
            </th>  
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.IdAlquilerCanchaNavigation.Numero)</td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCanchaNavigation.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCanchaNavigation.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCanchaNavigation.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraReservaDesde)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraReservaHasta)
            </td>
            <td>
                @{
                    switch (item.IdEstadoDetalle)
                    {
                        case 2: <label class="label label-info">Confirmado</label>
                            break;
                        case 5: <label class="label label-danger">Cancelado</label>
                            break;
                    }
                }
            </td>
        </tr>
}
    </tbody>
</table>
