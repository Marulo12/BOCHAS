@model IEnumerable<BOCHAS.Models.CanchasEfectivas>

@using System.Globalization;
@{ Layout = null;


    CultureInfo ci = new CultureInfo("Es-Es");
}


<!DOCTYPE html>

<html style="padding:0px;margin:0px;">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reporte Canchas en uso</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="padding:0px;margin:0px;">

    <img class="img-responsive" src="~/images/LogoBochas.png" width="50" style="float:left;position:absolute;z-index:10000" />
    <label style="float:right;">Fecha: @DateTime.Now.Date.ToString("dd/MM/yyyy")</label>
    <br />
    <h1 style="font-size:50px;padding-left:33%;font-family:'Times New Roman', Times, serif">Bochas Padel</h1>
    <hr />
    <h3 style="padding-left:0%;"><img src="~/images/extras/padel3.png" width="160" />&nbsp;&nbsp;Servicio de Alquiler de Cancha: Listado Ocupación de canchas</h3>

    <div class="container-fluid">

        <h4>Cantidad de canchas ocupadas</h4>
        @{

            if (Model.ToList().Count() != 0)
            {
                <h5>Desde el @Model.ToList()[0].FecD Hasta @Model.ToList()[0].FecH</h5>
            }
        }

        @{

            int[] horas = new int[24];
            for (int i = 0; i < 24; i++)
            {
                horas[i] = i;
            }

        }
        <table class="table table-bordered" style="text-align:center;">
            <thead style="background-color: rgba(0, 104, 253, 0.8);color:white;">
                <tr>
                    <th style="text-align:center;">Horario</th>
                    <th style="text-align:center;">
                        Lunes
                    </th>
                    <th style="text-align:center;">
                        Martes
                    </th>
                    <th style="text-align:center;">
                        Miercoles
                    </th>

                    <th style="text-align:center;">
                        Jueves
                    </th>
                    <th style="text-align:center;">
                        Viernes
                    </th>
                    <th style="text-align:center;">
                        Sabado
                    </th>
                    <th style="text-align:center;">
                        Domingo
                    </th>

                </tr>
            </thead>
            <tbody>

                @{ if (Model.ToList().Count() != 0)
                    {
                        foreach (var i in horas)
                        {
                            <tr>
                                <td>@i:00</td>
                                @{

                                    <td>

                                        @{
                                            foreach (var item in Model)
                                            {

                                                if (ci.DateTimeFormat.GetDayName(item.Dia) == "lunes")
                                                {
                                                    if (item.Hora == i)
                                                    {
                                                        <label style="font-size:17px;">@item.Cantidad</label>
                                                        break;
                                                    }

                                                }
                                            }
                                        }
                                    </td>
                                    <td>
                                        @{
                                            foreach (var item in Model)
                                            {

                                                if (ci.DateTimeFormat.GetDayName(item.Dia) == "martes")
                                                {
                                                    if (item.Hora == i)
                                                    {
                                                        <label style="font-size:17px;">@item.Cantidad</label>
                                                        break;
                                                    }
                                                }
                                            }
                                        }
                                    </td>
                                    <td>
                                        @{
                                            foreach (var item in Model)
                                            {

                                                if (ci.DateTimeFormat.GetDayName(item.Dia) == "miércoles")
                                                {
                                                    if (item.Hora == i)
                                                    {
                                                        <label style="font-size:17px;">@item.Cantidad</label>
                                                        break;
                                                    }
                                                }
                                            }
                                        }
                                    </td>
                                    <td>
                                        @{
                                            foreach (var item in Model)
                                            {

                                                if (ci.DateTimeFormat.GetDayName(item.Dia) == "jueves")
                                                {
                                                    if (item.Hora == i)
                                                    {
                                                        <label style="font-size:17px;">@item.Cantidad</label>
                                                        break;
                                                    }
                                                }
                                            }
                                        }
                                    </td>
                                    <td>
                                        @{
                                            foreach (var item in Model)
                                            {

                                                if (ci.DateTimeFormat.GetDayName(item.Dia) == "viernes")
                                                {
                                                    if (item.Hora == i)
                                                    {
                                                        <label style="font-size:17px;">@item.Cantidad</label>
                                                        break;
                                                    }
                                                }
                                            }
                                        }
                                    </td>
                                    <td>
                                        @{
                                            foreach (var item in Model)
                                            {

                                                if (ci.DateTimeFormat.GetDayName(item.Dia) == "sábado")
                                                {
                                                    if (item.Hora == i)
                                                    {
                                                        <label style="font-size:17px;">@item.Cantidad</label>
                                                        break;
                                                    }
                                                }
                                            }
                                        }
                                    </td>
                                    <td>
                                        @{
                                            foreach (var item in Model)
                                            {

                                                if (ci.DateTimeFormat.GetDayName(item.Dia) == "domingo")
                                                {
                                                    if (item.Hora == i)
                                                    {
                                                        <label style="font-size:16px;">@item.Cantidad</label>
                                                        break;
                                                    }
                                                }
                                            }
                                        }
                                    </td>

                                }
                            </tr>





                                                }
                                            }
                                            else
                                            {
                                                <tr><td colspan="8">No hay registros disponibles</td></tr>
                                            }



                }
            </tbody>
        </table>

        <hr />

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>