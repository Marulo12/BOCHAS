
@{
    ViewData["Title"] = "MostrarCobros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 style="padding:0px;margin:0px;"><i class="fas fa-money-bill"></i> Cobros</h3>
    </div>
    <div class="panel-body">

        <form class="form-group">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-inline">
                        <i class="fas  fa-calendar-alt "></i>
                        <input type="date" title="Fecha Desde" id="fechadesde" class="form-control" />
                        <i class="fas  fa-calendar-alt "></i>
                        <input type="date" title="Fecha Hasta" id="fechahasta" class="form-control" />
                        <button id="BtnBuscarCobro" type="button" class="btn btn-info"><i class="fa fa-search"></i></button>
                    </div>
                </div>
            </div>

        </form>
        <img id="ImgLoad" src="~/images/extras/dots-2.gif" width="200" style="display:none;" />
        <div id="Bodicobro" class="row" style="padding:6px;">


        </div>
    </div>
</div>
<div id="ModalPdf" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">

            <div class="modal-body mb">
                <div id="GeneraPDF">
                    <p>Generando PDF</p>
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped active" role="progressbar"
                             aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width:100%">
                        </div>
                    </div>
                </div>
                <object type="application/pdf" id="VisorPDF" src="" style="width:100%; height:100%;display:none;background-color:#515151;"></object>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>

</div>
@section Scripts{ <script src="~/js/Cobros.js"></script>}