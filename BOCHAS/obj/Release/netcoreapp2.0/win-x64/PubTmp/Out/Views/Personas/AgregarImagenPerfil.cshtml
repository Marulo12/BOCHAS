
@{
    ViewData["Title"] = "AgregarImagenPerfil";
}



<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="row">
            <div class="col-sm-2"><img id="imgSalida" class="img-circle" width="80" height="80" src="~/images/usuario.png" style="background-size:cover;" />  </div>
            
            <div class="col-sm-11"><h3 style="padding-left:5px;text-align:left;">Agregar Imagen de perfil</h3></div>
        </div>
         
    </div>
    <div class="panel-body">
        
        <form id="FormImagen" asp-action="SubirImagenEmpleados" class="form-group form-inline" asp-controller="Personas" method="POST" enctype="multipart/form-data" >
            <div class="btn-group">
                
                <input id="InputImagen" class="btn btn-default form-control" type="file" name="ImageFile"  required">
                
                <input id="BtnSubirImagen" type="submit" class="btn btn-xs btn-success form-control" value="Subir" />
            </div>
            <p>@TempData["Mensaje"]</p>
        </form>

    </div>
</div>



