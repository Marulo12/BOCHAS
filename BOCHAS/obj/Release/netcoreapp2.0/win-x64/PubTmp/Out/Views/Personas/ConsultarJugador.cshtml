<div id="ModalDomicilio" class="modal fade " role="dialog">
    <div class="modal-dialog ">

        <!-- Modal content-->
        <div class="modal-content ">
            <div class="modal-header" style="background:-webkit-gradient(linear, 96% 73%, 0% 0%, from(#AD9085), to(#CE2029));">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title" style="color:white"><i class="far fa-address-card"></i> Informacion Adicional</h3>
            </div>
            <div id="ModalBodyDomicilio" class="modal-body">
                <form class="form-group ">
                    <div class="row">
                        <div class="col-lg-12">
                            <p class="alert alert-info" style="text-align:center;font-size:18px;padding:0px;"><i class="fa fa-home" aria-hidden="true"></i><b>Domicilio</b></p>
                            <div class="row ">

                                <div class="col-sm-6"><label>Calle</label><input id="ModalCalle" type="text" class="form-control" style="border-top:0px;border-right:0px;border-left:0px;" /></div>
                                <div class="col-sm-6"><label>Numero</label><input id="ModalNumero" type="text" class="form-control" style="border-top:0px;border-right:0px;border-left:0px;" /></div>
                            </div>
                            <div class="row ">
                                <br />
                                <div class="col-sm-6"><label>Localidad</label><input id="ModalLocalidad" type="text" class="form-control" style="border-top:0px;border-right:0px;border-left:0px;" /></div>
                                <div class="col-sm-6"><label>Barrio</label><input id="ModalBarrio" type="text" class="form-control" style="border-top:0px;border-right:0px;border-left:0px;" /></div>
                            </div>
                            <div class="row ">
                                <br />

                                <div class="col-sm-6"><label>Piso</label><input id="ModalPiso" type="text" class="form-control" style="border-top:0px;border-right:0px;border-left:0px;" /></div>
                                <div class="col-sm-6"><label>Dpto</label><input id="ModalDpto" type="text" class="form-control" style="border-top:0px;border-right:0px;border-left:0px;" /></div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-12">


                            <p class="alert alert-info" style="text-align:center;font-size:18px;padding:0px;"><i class="fa fa-user" aria-hidden="true"></i><b>Usuario</b></p>
                            <div class="col-sm-6 form-inline"><label>Usuario</label> <input id="ModalUsuario" type="text" class="form-control" style="border-top:0px;border-right:0px;border-left:0px;" /></div>
                            <div class="col-sm-6 ">
                                <div class="dropdown" style="margin-top:2%;" >
                                    <button class="btn dropdown-toggle form-control " type="button" data-toggle="dropdown" style="background-color: rgba(132, 132, 132, 0.8);border-radius:9px;color:white;">
                                      Tipo de Jugador
                                        <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu " id="ListActividades" style="width:100%;">
                                        
                                    </ul>
                                </div>
                            </div>


                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>

    </div>
</div>

<div id="ModalEdicion" class="modal fade " role="dialog">
    <div class="modal-dialog ">

        <!-- Modal content-->
        <div class="modal-content ">
            <div class="modal-header" style="background:-webkit-gradient(linear, 96% 73%, 0% 0%, from(#AD9085), to(#CE2029));padding-bottom:0px;">

                <h3 style="color:white;"><i class="fas fa-pencil-alt"></i> Editar Jugador</h3>
                <button type="button" class="close" data-dismiss="modal">&times;</button>

            </div>
            <div id="ModalBodyEdicion" class="modal-body">

            </div>

        </div>

    </div>
</div>
<div class="modal fade" id="ModalTipoJugador" role="dialog">
    <div class="modal-dialog modal-sm">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header" style="background:-webkit-gradient(linear, 96% 73%, 0% 0%, from(#AD9085), to(#CE2029));">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" style="color:white;">Agregar Tipo de Jugador</h4>
            </div>
            <div class="modal-body">
                <form class="form-inline">
              <div class="row">
                  <div class="col-sm-12">
                      <label for="ModalTipoJugador">Tipos:  </label> &nbsp; <select id="CmbModalTipoJugador" class="btn  form-control" style="background-color: goldenrod;color:white;"></select>
                      <input id="IdPersonaTipoJugador" type="text" style="display:none;">
                  </div>
              </div>
                   
                </form>
                
            </div>
            <div class="modal-footer">
                <button id="BtnTipoJugador" class="btn btn-primary">Aceptar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            </div>
        </div>

    </div>
</div>

