

<div id="containerJugadorAlta" ng-app="">
    <div class="panel panel-primary">
        <div class="panel-heading" style="padding-bottom:0px;">
            <h3><i class="fas fa-user-shield"></i> Jugadores</h3>

        </div>
        <div class="panel-body">

            <div class="row">
                <ul class="nav nav-tabs ">
                    <li role="presentation"> <a asp-action="RegistrarJugador" asp-controller="Personas">Alta</a></li>
                    <li role="presentation" class="active"><a id="ConsultaJugador" asp-action="ConsultarEmpleado" asp-controller="Personas">Consulta</a></li>
